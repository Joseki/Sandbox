<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8">
    <meta name="description" content="">{default $robots = 'noindex, nofollow'}
    <meta name="robots" content="nofollow,noindex">

    <title>{block title|striptags}MyApplication{/block}</title>

    {control css}
    {block styles}{/block}

    {*<link rel="shortcut icon" href="{$basePath}/favicon.ico">*}

    {block head}{/block}
</head>

<body>
    <script> document.documentElement.className += ' js' </script>

    {block main}
        <div id="site">
            <header>
                <nav>
                    {block navigation}
                        {*{control nav}*}
                    {/block}
                </nav>
                {*<div id="breadcrumbs">{block breadcrumbs}{control nav:breadScrums}{/block}</div>*}
            </header>
            <div id="content">
                <div n:foreach="$flashes as $flash" class="flash {$flash->type}">{$flash->message|noescape}</div>
                {block content}{/block}
            </div>
            <footer class="wide">Copyright Â© {date("Y")}</footer>
        </div>
    {/block}

    {control js}
    {block scripts}{/block}
</body>
</html>
